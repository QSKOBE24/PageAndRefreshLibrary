<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/allearning_item_rl"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/allearning_item_heightsize"
        android:background="@color/allearning_item_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/allearning_item_left_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal|center"
            android:layout_weight="95"
            android:gravity="center_vertical|center_horizontal|center"
            android:textColor="@color/allearning_title_font"
            android:textSize="@dimen/allearning_itemgray_fontsize" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/allearning_divideline_bg" >
        </LinearLayout>

        <TextView
            android:id="@+id/allearning_item_center_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal|center"
            android:layout_weight="123"
            android:gravity="center_vertical|center_horizontal|center"
            android:textColor="@color/allearning_title_font"
            android:textSize="@dimen/allearning_itemgray_fontsize" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/allearning_divideline_bg" >
        </LinearLayout>

        <TextView
            android:id="@+id/allearning_item_right_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal|center"
            android:layout_weight="100"
            android:gravity="right|center_vertical|center_horizontal"
            android:paddingRight="10dp"
            android:textColor="@color/allearning_title_font"
            android:textSize="@dimen/allearning_itemgray_fontsize" />
    </LinearLayout>

</LinearLayout>