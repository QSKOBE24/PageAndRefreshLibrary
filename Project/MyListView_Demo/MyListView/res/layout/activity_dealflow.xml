<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/dealflow_title_rl"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dealflow_title_heightsize"
        android:background="@color/dealflow_title_bg"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/dealflow_title_left_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal|center"
            android:layout_weight="130"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="@string/dealflow_title_left_string"
            android:textSize="@dimen/dealflow_title_fontsize" />
        
          <LinearLayout
              android:layout_width="1dp"
              android:layout_height="fill_parent"
              android:background="@color/dealflow_divideline_bg"></LinearLayout>
        
          <TextView
              android:id="@+id/dealflow_title_center_textview"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical|center_horizontal|center"
              android:layout_weight="90"
              android:gravity="center_vertical|center_horizontal|center"
              android:text="@string/dealflow_title_center_string"
              android:textSize="@dimen/dealflow_title_fontsize" />
          
           <LinearLayout
              android:layout_width="1dp"
              android:layout_height="fill_parent"
              android:background="@color/dealflow_divideline_bg"></LinearLayout>
        
            <TextView
                android:id="@+id/dealflow_title_right_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:layout_weight="99"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="@string/dealflow_title_right_string"
                android:textSize="@dimen/dealflow_title_fontsize" />
        
    </LinearLayout>

    <ListView
        android:id="@+id/dealflow_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>


</LinearLayout>
